<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles/dashboard.css">
</head>
<body>
  <div id="background" class="background"></div>
  <div id="content">
    <div class="button-container">
      <button class="circular-button" onclick="toggleMenu()">+</button>
      <div class="dropdown-menu" id="menu">
        <div class="menu-item">
          <a href="/dashboard?user_id=<%= userId %>">My Stylist</a>
        </div>
        <div class="menu-item">
          <a href="/dashboard?user_id=<%= userId %>">Maya</a>
        </div>
        <div class="menu-item">
          <a href="/explore?user_id=<%= userId %>">Explore Communities</a>
        </div>
      </div>
    </div>
  </div>

  <script>
    function toggleMenu() {
      const menu = document.getElementById('menu');
      const background = document.getElementById('background');
      menu.classList.toggle('show');
      background.classList.toggle('blur');
    }
  </script>
</body>
</html>